@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using ProductCompareDotNet.ViewModels

@model RegisterViewModel


<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                       
                        <div class="col-xs-12">
                            <a href="#" class ="active"id="register-form-link">Register</a>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            @*@Html.Partial("_NewLoginPartial")*@
                            <form id="register-form" action="/Account/Register" method="post" role="form" >
                                <div class="form-group">
                          
                                    <input placeholder="User Name"class="form-control" data-val="true" data-val-required="The User Name field is required." id="UserName" name="UserName" type="text" value="">
                                </div>
                                <div class="form-group">
                                    <input placeholder="Email (Optional)"class="form-control" data-val="true" data-val-email="The Email field is not a valid e-mail address." data-val-required="The Email field is required." id="Email" name="Email" type="text" value="">
                                </div>
                                <div class="form-group">
                                    <input placeholder="Password"class="form-control" data-val="true" data-val-required="The Password field is required." id="Password" name="Password" type="password">
                                </div>
                                <div class="form-group">
                                    <input placeholder="Confirm Password"class="form-control"  data-val="true" data-val-equalto="The password and confirmation password do not match." data-val-equalto-other="*.Password" id="ConfirmPassword" name="ConfirmPassword" type="password">
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="g-recaptcha" data-sitekey="6LdRFiATAAAAAItcjrQG7q8Os9p-yFJVSzvLjTeg"></div>
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now">
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>