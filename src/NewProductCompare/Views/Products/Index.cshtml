@{
    ViewData["Title"] = "Product Compare";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IList<ProductCompareDotNet.Models.Product>

<h1>Your Products List/ Main Page</h1>


@foreach (var product in Model)
{
    <p>@Html.DisplayFor(x => product.ProductName)</p>
    @foreach (var comment in product.Comments)
    {
        <li>@Html.DisplayFor(x => comment.Statement)</li>
        <li>
            @Html.DisplayFor(x => comment.Like)
        </li>
            <hr />
    }

}